<div class="container">
	<ul class="list-group">
	{{#each posts}}
		<li>
			<p>{{this.post.message}}</p>
			<p>{{this.nb_replies}} replies. Press Reply to view them.</p>
			<a href="/forum/view/post/{{this.post._id}}" class="btn btn-info" role="button">Reply</a>
		</li>
	{{/each}}
	</ul>
</div>

<div class="container">
	<form action="/forum/reply/thread/{{threadId}}" method="POST">
		<h2>Reply in this thread</h2>
		<div class="form-group">
			<textarea class="form-control" rows="5" name="message"></textarea>
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>
