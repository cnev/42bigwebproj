<div class="container">
	<ul class="list-group">
		<li class="list-group-item panel panel-default">
			<div class="panel-heading">{{post.author}}</div>
			<div class="panel-body">{{post.message}}</div>
		</li>

		<li class="list-group-item panel panel-default">
			<div class="panel-heading">Replies to this post:</div>
				<ul class="list-group">
				{{#each replies}}
					<li class="list-group-item panel panel-default">
						<div class="panel-heading">{{this.author}}</div>
						<div class="panel-body">{{this.message}}</div>
					</li>
				{{/each}}
				</ul>
		</li>
	</ul>
</div>

<div class="container">
	<form action="/forum/reply/post/{{postId}}" method="POST">
		<h2>Reply to this post</h2>
		<div class="form-group">
			<textarea class="form-control" rows="5" name="message"></textarea>
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>
