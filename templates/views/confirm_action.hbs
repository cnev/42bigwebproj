
{{#if isDelActivity}}
<div class="container">
	<h2>{{confirm_text}}</h2><br />
	<form action="/admin/activity/delete/{{name}}" method="POST">
		<button type="submit" name='answer' class="btn btn-default" value="yes">YES</button>
		<button type="submit" name='answer' class="btn btn-default" value="no">NO</button>
	</form>
</div>
{{/if}}

